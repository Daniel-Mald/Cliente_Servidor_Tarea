<UserControl x:Class="VMS.Views.MainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VMS.Views"
             xmlns:vm="clr-namespace:VMS.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:VmsViewModel></vm:VmsViewModel>
    </UserControl.DataContext>
    <StackPanel>
        <Label Foreground="{Binding _vmsLista[0].Color}" FontSize="30" Content="{Binding _vmsLista[0].Contenido}"></Label>
        <Label Foreground="{Binding _vmsLista[1].Color}" FontSize="30" Content="{Binding _vmsLista[1].Contenido}"></Label>
        <Label Foreground="{Binding _vmsLista[2].Color}" FontSize="30" Content="{Binding _vmsLista[2].Contenido}"></Label>
        <Label Foreground="{Binding _vmsLista[3].Color}" FontSize="30" Content="{Binding _vmsLista[3].Contenido}"></Label>
        <Label Foreground="{Binding _vmsLista[4].Color}" FontSize="30" Content="{Binding _vmsLista[4].Contenido}"></Label>
        <Label Foreground="{Binding _vmsLista[5].Color}" FontSize="30" Content="{Binding _vmsLista[5].Contenido}"></Label>
        
    </StackPanel>
</UserControl>
